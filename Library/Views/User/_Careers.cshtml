@model Library.Models.CareersList

<script>
    $(document).ready(function () {
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");
    });
</script>

<div id="divCareer" class="form-group">
    <label class="col-lg-2 control-label">Carrera:</label>
    <div class="col-lg-10">        
        @Html.DropDownListFor(m => m.id, Model.careers as IEnumerable<SelectListItem>, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id, null, new { @class = "validationField" })
    </div>
</div>